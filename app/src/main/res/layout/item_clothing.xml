<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 衣物图片 -->
        <ImageView
            android:id="@+id/clothing_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/clothing_image_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_clothing_placeholder" />

        <!-- 收藏图标 -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite_border"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/favorite_color" />

        <!-- 衣物名称 -->
        <TextView
            android:id="@+id/clothing_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/clothing_image"
            app:layout_constraintEnd_toStartOf="@id/favorite_icon"
            app:layout_constraintTop_toTopOf="@id/clothing_image"
            tools:text="白色T恤" />

        <!-- 衣物类型 -->
        <TextView
            android:id="@+id/clothing_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/clothing_name"
            app:layout_constraintEnd_toEndOf="@id/clothing_name"
            app:layout_constraintTop_toBottomOf="@id/clothing_name"
            tools:text="T恤 · 夏季" />

        <!-- 品牌和价格 -->
        <TextView
            android:id="@+id/clothing_brand_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/clothing_name"
            app:layout_constraintEnd_toEndOf="@id/clothing_name"
            app:layout_constraintTop_toBottomOf="@id/clothing_type"
            tools:text="Uniqlo · ¥99" />

        <!-- 底部信息栏 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/clothing_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clothing_image">

            <!-- 颜色指示器 -->
            <View
                android:id="@+id/color_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/color_indicator_background"
                tools:backgroundTint="@android:color/holo_blue_light" />

            <!-- 状态标签 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="10sp"
                app:chipMinHeight="24dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                style="@style/Widget.Material3.Chip.Assist"
                tools:text="可穿" />

            <!-- 穿着次数 -->
            <TextView
                android:id="@+id/wear_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="end"
                tools:text="穿过 5 次" />

            <!-- 更多操作按钮 -->
            <ImageView
                android:id="@+id/more_options"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_more_vert"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@android:color/darker_gray" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
